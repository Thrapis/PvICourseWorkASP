@using VideoHosting.Models.Database.Entities.Sinthetic
@model IEnumerable<VideoPreviewInfo>

@{
    ViewBag.Title = "Search Results";
}

<div class="mb-2 text-center" style="width: 100%; 
    font-size: 20px; font-weight: 400;">Search results</div>

<div class="container mb-3">

    <div class="row row-cols-auto justify-content-center">
        @foreach (VideoPreviewInfo preview in Model)
        {
            @VideoHelpers.VideoPreview(preview, Url)
        }
        @if (Model.Count() == 0)
        {
            <div class="text-center pl-2 pr-2" 
                 style="border: 1px dashed gray; border-radius: 5px;">
                No one search result
            </div>
        }
    </div>
</div>