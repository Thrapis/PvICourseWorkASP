@model VideoHosting.Models.Page.RegisterModel

@using (Ajax.BeginForm("CreateAccount", "Account", new AjaxOptions { UpdateTargetId = "results", LoadingElementId = "loading" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="text-center">Create an account</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row justify-content-sm-center mw-100" style="margin: 0">
        <div class="col-lg-6 col-md-offset-3 text-center">
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Login)
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RepeatPassword)
                @Html.EditorFor(model => model.RepeatPassword, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                Already have an account? @Ajax.ActionLink("Sign in.", "SignInWindow", "Account", new AjaxOptions { UpdateTargetId = "results" })
            </div>
        </div>
    </div>
</div>
}
